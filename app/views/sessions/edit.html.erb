<% provide(:title, 'Profile') %>
<%= form_with model: @session,method: :put, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= image_tag current_user.avatar%>
    </div>
    <div class="col-sm-9">
      <p class="username"><%=current_user.username %></p>
      <a class="change-photo" href="">Change Profile Photo</a>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :username, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xl-8">
    </div>
    <div class="col-sm-2">
      <%= f.submit "Save",data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
  <div class="form-group row">
    <div class="col-xl-7">
    </div>
    <div class="col-sm-5">
      <%= link_to "Remove Account", delete_account_path, class: 'text-danger js-account--close'%>
  </div>
