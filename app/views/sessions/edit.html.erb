<% provide(:title, 'Edit Profile â€¢ Instagram') %>
<%= form_with model: @session,method: :put, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= image_tag current_user.avatar.url, class: "edit-profile-pic"%>
    </div>
    <div class="col-sm-9">
      <p class="username"><%=current_user.username %></p>
        <%= f.file_field :avatar, use_filename: true %>
    </div>
  </div>
  <div class="row edit-profile">
    <ul class="col-sm-3"></ul>
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item ">
        <a class="nav-link active" href="#profile" role="tab" data-toggle="tab">Edit Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#password" role="tab" data-toggle="tab">Change Password</a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade show active" id="profile">
      <div  class="form-group row in active">
        <%= f.label :full_name, class: 'col-sm-3 col-form-label in active' %>
        <%= f.text_field :full_name, class: 'col-sm-4 0form-control in active' %>
      </div>
      <div class="form-group row">
        <%= f.label :bio, class: 'col-sm-3 col-form-label in active' %>
        <%= f.text_area :decription, autofocus: true, class: 'col-sm-4 form-control in active' %>
      </div>
      <div  class="form-group row in active">
        <%= f.label :website, class: 'col-sm-3 col-form-label in active' %>
        <%= f.text_field :website, class: 'col-sm-4 0form-control in active' %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane fade" id="password">
      <div class="form-group row">
        <%= f.label :new_password, class: 'col-sm-3 col-form-label' %>
        <%= f.password_field :new_password, autocomplete: "new-password", class: 'col-sm-4 form-control' %>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, class: 'col-sm-3 col-form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-sm-4 form-control' %>
      </div>
      <div class="form-group row">
        <%= f.label :current_password, class: 'col-sm-3 col-form-label' %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'col-sm-4 form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xl-3"></div>
    <%= f.submit "Save",data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
  </div>
  </div>
<% end %>
  <div class="form-group row">
    <div class="col-xl-3"></div>
    <%= link_to "Remove Account", delete_account_path, class: 'text-danger js-account--close col-sm-5'%>
  </div>
