<% provide(:title, 'Remove Account') %>
<%= form_with model: @session,method: :put, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
  <div class="form-group row">
    <div class="col-sm-8 col-form-label">
      <h2>Confirm password to remove Account</h2>
    </div>

  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-4 col-form-label' %>
    <div class="col-sm-3">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
<% end %>
  <div class="form-group row">
    <div class="col-xl-4">
    </div>
    <div class="col-sm-5">
      <%= link_to "Remove Account",user_path(current_user.id) ,data: { confirm: 'Do you really want to delete it?', title: 'Confirm Deletion', commit: 'YES', cancel: 'NO' }, method: :delete, class: 'btn btn-danger'%>
      <%#= link_to "Remove Account", nil, class: 'text-danger js-account--close'%>
  </div>

