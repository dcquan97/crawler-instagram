<% provide(:title, 'Remove Account') %>
<%= form_tag user_path, method: :delete, class: "form-horizontal form-edit-user"  do |f| %>
  <div class="form-group row">
    <div class="col-sm-8 col-form-label">
      <h2>Confirm password to remove Account</h2>
    </div>
  <div class="form-group row">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control m-2' %>
    </div>
  <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary m-2' %>
    </div>
<% end %>
