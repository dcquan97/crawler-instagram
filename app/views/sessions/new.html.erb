<% provide(:title, 'Login â€¢ Instagram') %>
<h2 class="text-center m-5">Log in</h2>
<div class="col-8 offset-2 col-sm-6 offset-sm-3">
  <%= form_for :user do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control m-2' %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control m-2' %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me,'yes', true, class: 'm-2' %>
      <%= f.label :remember_me %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary m-2' %>
    </div>
  <% end %>
  <hr>
</div>
