<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 content">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <h3><i class="fa fa-lock fa-4x"></i></h3>
            <h2 class="text-center">Forgot Password?</h2>
            <p>You can reset your password here.</p>
            <div class="panel-body">
              <%= form_tag password_index_path, method: 'post' do %>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "email address" %>
                  </div>
                </div>
                <div class="form-group">
                  <%= submit_tag "Reset Password", class: "btn btn-lg btn-primary btn-block" %>
                </div>
                <input type="hidden" class="hide" name="token" id="token" value="">
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>